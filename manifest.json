{
  "manifest_version": 2,

  "name": "Memo Extension",
  "description": "Companion extension for Memo",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["assets/jquery.min.js", "assets/tock.min.js", "backgroundTimer.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab"
  ]
}
