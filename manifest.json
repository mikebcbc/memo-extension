{
  "manifest_version": 2,

  "name": "Memo Extension",
  "description": "Companion extension for Memo",
  "version": "1.0.2",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icons/16.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },
  "background": {
    "scripts": ["assets/jquery.min.js", "assets/tock.min.js", "backgroundTimer.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
